@model IEnumerable<MusicWeb.Models.LibraryModel>
@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<h2 style="text-align:center;color:#ff6a00;top:10px;position:relative;">KHÔNG GIAN NHẠC DÀNH RIÊNG CHO BẠN</h2>
<style>
    h2 {
        text-align: center;
        padding: 10px;
        background: linear-gradient(to right, #ffcc00, #ff6699);
    }
</style>
<section class="total-library">
    <div class="collection-item">
        <div class="total-collection-item">
            <ul class="collection-taskbar">
                <li class="item-song-liked">
                    <a class="link-song-like" href="#"><b>Liked</b> </a>
                </li>
                <li class="item-song-albums">
                    <a class="link-song-albums" href="#"><b>Albums</b></a>
                </li>
            </ul>
        </div>
        <div class="main-content-library">
            <div class="collection">
                <section class="collection_section_liked_section">
                    <p>
                        Nghe các bản nhạc mà bạn đã thích:
                    </p>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (item.ID_AdminUser == int.Parse(Session["ID"].ToString()))
                            {
                                <div class="col-md-2 list-music--item" style="border-radius: 100px;">
                                    <div class="flip-card" style="border-radius:100px;" >
                                        <div class="flip-card-inner" style="border-radius: 100px;">
                                            <div class="flip-card-front" style="border-radius: 100px;">
                                                <img src="@Url.Content(item.song.ImageSong)" alt="Avatar" style="width:200px;height:200px;border-radius:100px;">
                                            </div>
                                            <div class="flip-card-back">
                                                <div class="recommend-music-icons">
                                                    <div class="controls_player--icon_img">
                                                        <button title="Thêm vào yêu thích" onclick="toggleLike(this,@item.ID_Song,@Session["ID"])" id="btnmusic" class="btn-like-music"> <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512" fill="white"><path d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z" /></svg></button>
                                                        <i class="far fa-play-circle" onclick="changeAudioSource('@Html.Raw(item.song.Audio_Song)','@Html.Raw(item.song.Name_Song)','@Html.Raw(item.song.Name_singer)','@Html.Raw(item.song.ImageSong)',@Html.Raw(item.ID_Song))"></i>
                                                        <i class="fa-solid fa-ellipsis"></i>
                                                        <i class="far fa-pause-circle"></i>
                                                    </div>
                                                </div>
                                                <div class="recommend-music-items--info">
                                                    <h5>@item.song.Name_Song</h5>
                                                    <span>@item.song.Name_singer</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var likedButton = document.querySelector('.link-song-like');
        var albumsButton = document.querySelector('.link-song-albums');

        var likedSection = document.querySelector('.collection_section_liked_section');
        var albumsSection = document.querySelector('.collection_section_album_section');

        likedButton.addEventListener('click', function (event) {
            event.preventDefault();
            likedSection.style.display = 'block';
            albumsSection.style.display = 'none';
        });

        albumsButton.addEventListener('click', function (event) {
            event.preventDefault();
            likedSection.style.display = 'none';
            albumsSection.style.display = 'block';
        });
    });
</script>