<script>
    var currentSlide = 1;
    var interval;

    function changeSlide(direction) {
        if (direction === 'next') {
            currentSlide = (currentSlide % 3) + 1;
        }

        else if (direction === 'prev') {
            currentSlide = (currentSlide - 2 + 3) % 3 + 1;
        }
        var radio = document.getElementById('slide' + currentSlide);
        radio.checked = true;
    }
    function autoChangeSlide() {
        interval = setInterval(function () {
            changeSlide('next');
        }, 6000);
    }

    function stopAutoChangeSlide() {
        clearInterval(interval);
    }
    autoChangeSlide();
</script>

