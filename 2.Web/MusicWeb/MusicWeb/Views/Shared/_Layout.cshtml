<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/_LayouStyleSheet.css" rel="stylesheet" />*@
    <link href="~/Content/layoutStyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/_layoutJavaScript.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/Scripts/JQuery.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/2c4590e3d7.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @*SideBar----Start*@
    <div class="sidenav">
        <a href="~/Admin/Index"><i class="fa-solid fa-user"></i> Account</a>
        <a href="~/Admin/Song"><i class="fa-solid fa-music"></i> Song</a>
        <a href="~/Admin/Singer"><i class="fa-brands fa-github"></i> Singer</a>
        <a href="~/Admin/Library"><i class="fa-brands fa-mix"></i> Library</a>
    </div>
    @*SideBar----End*@

    <div class="body-content">
        <div class="topnav" id="myTopnav">
            <a href="#" onclick="btnSearchAdmin()"><i class="fa fa-fw fa-search"></i> Search</a>
            <a href="#"><i class="fa fa-fw fa-envelope"></i> Contact</a>
            <a href="/Home/Index"><i class="fa fa-fw fa-user"></i> @Session["username"]</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
        @using (Html.BeginForm("seachAdmin", "Admin", FormMethod.Post))
        {
            <div class="container_header--content_search" id="searchContainer">

                <button><i class="hidden_on fas container_header--content_search--icon fa-search"></i></button>
                <input autocorrect="off" autocapitalize="off" class="content_search_history" type="search" name="_seacrchName" placeholder="Nhập tên người dùng hoặc tên nhạc , nghệ sĩ....">
            </div>
        }

        <script>
            function btnSearchAdmin() {
                var searchContainer = document.getElementById("searchContainer");
                if (searchContainer.style.display === "none" || searchContainer.style.display === "") {
                    searchContainer.style.display = "flex";
                }

                else {
                    searchContainer.style.display = "none";
                }
            }
        </script>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
