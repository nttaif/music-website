<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/homeStylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/2c4590e3d7.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/homeLayoutScript.js"></script>
</head>
<body style="background-color:black">
    @*Header và các menu link chính của website*@
    <div class="div-sidebar justify-content-center">
        <nav class="navbar navbar-brand">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand" href="#">
                    @*<img src="~/Content/images/logoHuflit.png" />*@
                    <span>HUFLIT</span>
                </a>
            </div>
        </nav>
        <div class="d-flex flex-column mb-3">
            <div class="p-2">
                <a href="~/Home/Index" class="nav-link active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                        <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                        <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                    </svg>
                    <span>Trang chủ</span>
                </a>
            </div>
            <div class="p-2">
                <a href="~/Home/Discover" class="nav-link active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-disc-fill" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-6 0a2 2 0 1 0-4 0 2 2 0 0 0 4 0zM4 8a4 4 0 0 1 4-4 .5.5 0 0 0 0-1 5 5 0 0 0-5 5 .5.5 0 0 0 1 0zm9 0a.5.5 0 1 0-1 0 4 4 0 0 1-4 4 .5.5 0 0 0 0 1 5 5 0 0 0 5-5z" />
                    </svg>
                    <span>Khám phá</span>
                </a>
            </div>
            <div class="p-2">
                <a href="#" class="nav-link active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-journals" viewBox="0 0 16 16">
                        <path d="M5 0h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2 2 2 0 0 1-2 2H3a2 2 0 0 1-2-2h1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1H1a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v9a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1H3a2 2 0 0 1 2-2z" />
                        <path d="M1 6v-.5a.5.5 0 0 1 1 0V6h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V9h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 2.5v.5H.5a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1H2v-.5a.5.5 0 0 0-1 0z" />
                    </svg>
                    <span>Thư viện</span>
                </a>
            </div>
        </div>
        @*Các danh bài hát và playlist đã lưu*@

        <ul class="list-group">
            <li><h4><b>Danh sách các playlist đã lưu:</b></h4></li>
            @for (int i = 0; i < 10; i++)
            {
                <li class="list-group-item">
                    <a href="#" class="nav-link">
                        <img src="~/Content/images/faded.jpg" width="50" height="50">
                        <marquee direction="right" width="20%">
                            <b>Faded</b>
                        </marquee>
                        <span>Alan Walker</span>
                    </a>
                </li>
            }
        </ul>

    </div>



    <div class="div-content">
        <header class="header-content">
            <div class="container_header--content">
                <span class="container_header--content_btns">
                    <button class="container_header--content_btn ">
                        <i class="fas fa-arrow-left"></i>
                    </button>
                    <button class="container_header--content_btn ">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </span>
                <div class="container_header--content_search">
                    <i class="hidden_on fas container_header--content_search--icon fa-search"></i>
                    <input class="content_search_history" type="search" placeholder="Nhập tên bài hát, Nghệ sĩ hoặc MV...">
                </div>
            </div>
            
        </header>
        <div class="content-oop">
            @RenderBody()
        </div>

    </div>


    <div class="div-footer">
        <div class="media ">
            <div class="media_cd" style="background-image: url(http://tienganhonline.com/wp-content/uploads/2019/04/faded-678x381.jpg)">
                <!-- <img src="https://photo-resize-zmp3.zadn.vn/w240_r1x1_jpeg/cover/1/b/9/a/1b9a056a527b7c7409e890a48bb7fac6.jpg"> -->
            </div>
            <div class="media_title">
                <marquee class="media_title--name" scrolldelay="130">Faded</marquee>
                <a class="media_title--author">Alan Walker</a>
            </div>
            <div class="media_icon">
                <ul>
                    <li class="meadia_icon_more heart">
                        <i class="fas fa-heart"></i>
                        <i class="far fa-heart"></i>
                    </li>
                    <li class="meadia_icon_more">
                        <i class="fas fa-ellipsis-h"></i>
                    </li>
                </ul>
            </div>
        </div>

        <div class="controls ">
            <ul class="controls_player">
                <li class="controls_player--icon">
                    <i class="fas fa-random"></i>
                </li>
                <li class="controls_player--icon">
                    <i class="fas fa-step-backward"></i>
                </li>
                <li class="controls_player--icon">
                    <i class="far fa-play-circle"></i>
                    <i class="far fa-pause-circle"></i>
                </li>
                <li class="controls_player--icon">
                    <i class="fas fa-step-forward"></i>
                </li>
                <li class="controls_player--icon">
                    <i class="fas fa-redo"></i>
                </li>
            </ul>
            <div class="controls_time">
                <span class="controls_time--right">00.00</span>
                <input id="progress" class="controls_time--range" value="0" type="range" step="1" min="0" max="100">
                <span class="controls_time--left">03.22</span>
            </div>
        </div>


        <div class="controls-extend">
            <ul class="extend-item">
                <li class="controls_extend--lever_item hion-on-mobile-table">
                    <i class="fab fa-youtube-square"></i>
                    <!-- <i class="fab fa-vimeo"></i> -->
                </li>
                <li class="controls_extend--lever_item  hion-on-mobile-table">
                    <i class="fas fa-microphone"></i>
                </li>
                <li class="controls_extend--lever_item">
                    <i class="fas fa-volume-up"></i>
                </li>
                <li class="controls_extend--lever_item_range">
                    <input id="controls_lever_range" type="range" class="range_volum" value="100" step="1" min="0" max="100">
                </li>
                <li class="controls_extend--lever_item ">
                    <i class="fas fa-expand-alt"></i>
                </li>
                <li class="controls_extend--lever_item_boder">
                </li>
                <li class="controls_extend--lever_item">
                    <i class="fas fa-sliders-h"></i>
                </li>
            </ul>
        </div>
    </div>
    <script src="~/Scripts/homeLayoutScript.js"></script>
</body>
</html>
