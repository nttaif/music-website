@model IEnumerable<MusicWeb.Models.AdminUserModel>
@{
    ViewBag.Title = "Index";
}

<h2>QUẢN LÝ TÀI KHOẢN</h2>

<p>
    @Html.ActionLink("Create New", "CreateAdminUser", null, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordUser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PasswordUser)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAdminUser", new { id = item.ID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "DeleteAdminUser", new { id = item.ID },new {@class= "btn btn-danger" })
        </td>
    </tr>
}
</table>
